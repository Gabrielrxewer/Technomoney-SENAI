# Porta exposta pela API (defina via infraestrutura; não exponha diretamente sem TLS)
PORT=4002

# Ambiente e logs
NODE_ENV=production
LOG_LEVEL=info

# Configuração do banco de dados
DB_HOST=
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=
DB_DRIVER=postgres

# Integrações externas
# Base HTTPS da API de mercado compatível com o contrato enriquecido (ticker, fundamentals, notícias)
MARKET_API_BASE_URL=
SWAGGER_FILE=

# Introspecção OAuth2/JWT (sempre via HTTPS)
AUTH_INTROSPECTION_URL=
AUTH_INTROSPECTION_CLIENT_ID=
# Armazene o segredo em cofre seguro e rotacione periodicamente
AUTH_INTROSPECTION_CLIENT_SECRET=

# Parâmetros de validação de tokens (para compatibilidade futura com JWKS locais)
AUTH_JWKS_URL=
AUTH_ISSUER=
AUTH_AUDIENCE=
AUTH_CLOCK_TOLERANCE=
AUTH_ALLOWED_ALGS=
AUTH_STATIC_JWKS=
